{
    "compilerOptions": {
      "outDir": "./dist",
      "noEmit": false,
      "allowJs": false,
      "checkJs": false,
      "alwaysStrict": true,
      "declaration": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "lib": ["esnext", "DOM"],
      "module": "es6",
      "moduleResolution": "node",
      "noEmitOnError": true,
      "noImplicitAny": true,
      "noImplicitReturns": false,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "pretty": true,
      "removeComments": true,
      "resolveJsonModule": true,
      "strict": true,
      "strictBindCallApply": true,
      "strictNullChecks": true,
      "target": "es6",
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  